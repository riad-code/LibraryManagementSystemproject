@model LIBRARYMANAGEMENT.Models.Book
@{
    ViewData["Title"] = " Delete Book";
}

<div class="card shadow">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-trash-alt"></i> Confirm Delete</h5>
        <a asp-action="Index" class="btn btn-light btn-sm text-danger">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </div>

    <div class="card-body">
        <p class="fw-bold text-danger">Are you sure you want to delete the following book?</p>

        <dl class="row">
            <dt class="col-sm-3"> Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">✍️ Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3"> Category</dt>
            <dd class="col-sm-9">@Model.Category?.CategoryName</dd>

            <dt class="col-sm-3"> Available Copies</dt>
            <dd class="col-sm-9">@Model.AvailableCopies</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BookID" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> No, Cancel
            </a>
        </form>
    </div>
</div>
