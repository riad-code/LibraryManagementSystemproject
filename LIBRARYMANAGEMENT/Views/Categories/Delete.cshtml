@model Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-trash-alt"></i> Delete Category</h5>
        <a asp-action="Index" class="btn btn-light btn-sm text-danger">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card-body">
        <h5 class="text-danger mb-4">Are you sure you want to delete this category?</h5>

        <dl class="row">
            <dt class="col-sm-3 fw-semibold">Category Name:</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3 fw-semibold">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="CategoryID" />
            <div class="text-end">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
