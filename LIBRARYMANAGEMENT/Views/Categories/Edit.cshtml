@model Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-edit"></i> Edit Category</h5>
        <a asp-action="Index" class="btn btn-light btn-sm text-warning">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CategoryID" />

            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label fw-semibold">Category Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-save"></i> Update Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
