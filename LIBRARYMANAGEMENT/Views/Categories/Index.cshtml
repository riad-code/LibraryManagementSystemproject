@model IEnumerable<Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-list-alt"></i> Category Management</h5>
        <a asp-action="Create" class="btn btn-light btn-sm text-primary">
            <i class="fas fa-plus-circle"></i> Add Category
        </a>
    </div>

    <div class="card-body p-0">
        <table class="table table-hover table-bordered mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th style="width: 30%"> Category Name</th>
                    <th style="width: 40%"> Description</th>
                    <th style="width: 30%"> Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var cat in Model)
                    {
                        <tr>
                            <td class="align-middle">@cat.CategoryName</td>
                            <td class="align-middle">@cat.Description</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@cat.CategoryID" class="btn btn-sm btn-warning me-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@cat.CategoryID" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No categories available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-sm btn-light">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        <span><strong>Back</strong></span>
    </a>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
