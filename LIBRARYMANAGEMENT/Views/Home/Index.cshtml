@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Welcome to IUBAT Library";
}


<style>
    *{
        margin: 0px ;
        padding: 0px;
    }
    body {
       
        background-color: lightblue;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(5px);
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
        }

    .card-body i {
        font-size: 3rem;
        margin-bottom: 0.5rem;
    }

    .carousel-inner img {
        height: 400px;
        object-fit: cover;
    }
</style>

<div class="container-fluid px-0">

    <!-- Carousel at top with no space -->
    <div id="libraryCarousel" class="carousel slide shadow-sm m-0 p-0">
        <div class="carousel-inner rounded-0">
            <div class="carousel-item active">
                <img src="~/Admin/dist/img/slider1.jpg" class="d-block w-100" alt="Library Collection">
            </div>
            <div class="carousel-item">
                <img src="~/Admin/dist/img/slider2.jpg" class="d-block w-100" alt="Book Reading Area">
            </div>
            <div class="carousel-item">
                <img src="~/Admin/dist/img/slider3.jpg" class="d-block w-100" alt="Students in Library">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#libraryCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#libraryCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Welcome Message -->
    <div class="text-center py-5 bg-light">
        <h1 class="display-5 fw-bold text-primary">Welcome to IUBAT Central Library</h1>
        <p class="lead text-secondary">Explore books, request your favorites, and enjoy a rich digital + physical collection for all students and faculty.</p>
    </div>

    <!-- Feature Cards -->
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card feature-card shadow-sm h-100 border-0 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-book-open text-primary"></i>
                        <h5 class="card-title mt-3 fw-semibold">Browse Books</h5>
                        <p class="card-text">Explore books by category, author, or title from our growing collection.</p>
                        <a href="/Home/BookList" class="btn btn-outline-primary btn-sm">View Books</a>

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card shadow-sm h-100 border-0 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-search text-success"></i>
                        <h5 class="card-title mt-3 fw-semibold">Search Library</h5>
                        <p class="card-text">Easily find resources using filters and search by author, keyword, or category.</p>
                        <a href="/Books/Search" class="btn btn-outline-success btn-sm">Search</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card shadow-sm h-100 border-0 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-hand-paper text-danger"></i>
                        <h5 class="card-title mt-3 fw-semibold">Request a Book</h5>
                        <p class="card-text">Can't find your desired book? Request it now or reserve in advance.</p>
                        <a href="/BookRequests/Create" class="btn btn-outline-danger btn-sm">Request Book</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About / Footer Line -->
    <div class="text-center text-muted pb-4">
        <p class="mb-0"> IUBAT Library supports a knowledge-driven culture with access to both digital & print resources for lifelong learners.</p>
    </div>
</div>

@section Scripts {
    <script>
        setInterval(() => {
            const carousel = document.querySelector('#libraryCarousel');
            const carouselInstance = bootstrap.Carousel.getInstance(carousel) || new bootstrap.Carousel(carousel);
            carouselInstance.next();
        }, 4000);
    </script>
}
